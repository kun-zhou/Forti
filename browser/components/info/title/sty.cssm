#title-wrapper {
    width: 100%;
    padding: 20px 60px 0 20px;
    font-weight: var(--font-weight-title);
    font-size: 22px;
}

#title-content-display {
    width: 100%;
    height: 34px;
    padding-bottom: 7px;
    border-bottom: 1px solid var(--color-border-title);
}

#title-content-input {
    width: 100%;
    height: 34px;
    padding-bottom: 7px;
    border-bottom: 1px solid var(--color-active-border-title);
}