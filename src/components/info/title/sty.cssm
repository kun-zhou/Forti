#title-wrapper {
    width: 100%;
    height: 70px;
    padding: 10px 60px 3px 20px;
    display: flex;
    align-items: center;
}

#title-content-display {
    font-size: 22px;
    font-weight: 400;
    width: 100%;
    padding-bottom: 10px;
    border-bottom: 1px solid var(--color-border);
}

#title-content-input {
    font-size: 22px;
    font-weight: 400;
    width: 100%;
    padding-bottom: 10px;
    border-bottom: 1px solid #318CE7;
}